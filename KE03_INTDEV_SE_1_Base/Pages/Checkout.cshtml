@page
@model KE03_INTDEV_SE_1_Base.Pages.CheckoutModel
@{
    ViewData["Title"] = "Afrekenen";
}

<h2>Afrekenen</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Naam</label>
        <input type="text" asp-for="Naam" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Adres</label>
        <input type="text" asp-for="Adres" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Betaalmethode</label>
        <select asp-for="Betaalmethode" class="form-control" required>
            <option value="iDEAL">iDEAL</option>
            <option value="Creditcard">Creditcard</option>
            <option value="PayPal">PayPal</option>
            <option value="Bitcoin">Bitcoin</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Bestelling plaatsen</button>
</form>