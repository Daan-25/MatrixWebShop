@page "{id:int}"
@model KE03_INTDEV_SE_1_Base.Pages.PartsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    @if (Model.Part != null)
    {
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.Part.Img" alt="@Model.Part.Name" class="img-fluid" style="max-width: 400px;"/>
            </div>
            <div class="col-md-6">
                <h2>@Model.Part.Name</h2>
                <p class="h4 text-primary">â‚¬@Model.Part.Price</p>
                <div class="mt-4">
                    <h4>Product Details</h4>
                    <p>@Model.Part.Description</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Product niet gevonden.
        </div>
    }
    
    <div class="mt-4">
        <a asp-page="/Index" class="btn btn-secondary">Terug naar overzicht</a>
    </div>
</div>