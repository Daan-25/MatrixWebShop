@page
@model BestelgeschiedenisModel
@{
    ViewData["Title"] = "Bestelgeschiedenis";
}

<h2>Bestelgeschiedenis</h2>

@if (Model.Bestellingen != null && Model.Bestellingen.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Ordernummer</th>
            <th>Datum</th>
            <th>Producten</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model.Bestellingen)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderItems)
                        {
                            <li>@item.Part?.Name - Aantal: @item.Aantal</li>
                        }
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Er zijn geen bestellingen gevonden.</p>
}